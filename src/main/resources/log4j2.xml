<?xml version="1.0" encoding="UTF-8"?>
<configuration name="changename" packages=""
  monitorInterval="30">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="%d [%t] %-5level - %location - %msg%n" />
    </Console>

    <RollingFile name="changenameRollingFile" fileName="logs/changename.log"
      filePattern="logs/$${date:yyyy-MM}/app-%d{yyyy-MM-dd-HH}-%i.changename.log">
      <PatternLayout>
        <pattern>%d %p %c [%t] - %location - %m%n</pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="6"
          modulate="true" />
        <SizeBasedTriggeringPolicy size="250 MB" />
      </Policies>
    </RollingFile>

  </appenders>

  <loggers>
    <root level="ALL">
      <appender-ref ref="Console" />
    </root>
    <logger name="fr" level="ALL">
      <appender-ref ref="changenameRollingFile" />
    </logger>
  </loggers>

</configuration>
